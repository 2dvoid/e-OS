## Assign apps to Workspaces
assign [class="ticktick"] $ws1
assign [app_id="neovide"] $ws3
assign [app_id="zen"] $ws4
assign [app_id="firefox"] $ws5
assign [app_id="thunar"] $ws7

#for_window [app_id="firefox"] title_format "Firefox"
#for_window [app_id="LibreWolf"] title_format "%app_id"
for_window [app_id="zen"] title_format "Zen"
for_window [app_id="firefox"] title_format "AI"

for_window [app_id="firefox"] fullscreen enable
# for_window [app_id="neovide"] fullscreen enable

############################################
